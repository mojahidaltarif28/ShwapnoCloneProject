                    <p style="margin: 0;">Swapno Coverage Area</p>
                    <table class="r-table">
                        <tr class="tbg-o">
                            <th scope="row">Dhaka</th>
                            <th scope="row" class="tm">-</th>
                            <td>188 outlets</td>
                            <th scope="row">Sylhet</th>
                            <th scope="row" class="tm">-</th>
                            <td>6 outlets</td>

                        </tr>
                        <tr class="tbg-e">
                            <th scope="row">Chattogram</th>
                            <th scope="row" class="tm">-</th>
                            <td>15 outlets</td>
                            <th scope="row">Khulna</th>
                            <th scope="row" class="tm">-</th>
                            <td>12 outlets</td>

                        </tr>
                        <tr class="tbg-o">
                            <th scope="row">Cumilla</th>
                            <th scope="row" class="tm">-</th>
                            <td>9 outlets</td>
                            <th scope="row">Gazipur</th>
                            <th scope="row" class="tm">-</th>
                            <td>38 outlets</td>
                        </tr>
                        <tr class="tbg-e">
                            <th scope="row">Manikganj</th>
                            <th scope="row" class="tm">-</th>
                            <td>1 outlets</td>
                            <th scope="row">Barishal</th>
                            <th scope="row" class="tm">-</th>
                            <td>10 outlets</td>
                        </tr>
                    </table>
                </div>
                <div class="f-up-r-img">

                </div>

            </div>

        </div>
        <div class="footer-main">
            <div class="fm1">
                <div class="fm1-img"></div>
                <div class="fmh">Always Here for You</div>
                <div class="fm1b">Call Us: 16469 (9am-9pm, Everyday)</div>
                <div class="fm1b">Email Us: queries@acilogistics.net</div>
            </div>
            <div class="fm2">
                <p class="fmh">Information</p>
                <a href="#">Office Address</a>
                <a href="#">Shipping & returns</a>
                <a href="#">About us</a>
                <a href="#">Terms & Condition</a>
            </div>
            <div class="fm3">
                <p class="fmh">Information</p>
                <a href="">Contact Us</a>
            </div>
            <div class="fm4">
                <p class="fmh">My Account</p>
            </div>
            <div class="fm4">
                <p class="fmh">Pay With</p>
                <div class="fm4-img"></div>
                <p class="fmh">Follow Us</p>
                <div class="social">
                    <a href="#" class="facebook"><i class="fa-brands fa-square-facebook"></i></a>
                    <a href="#" class="youtube"><i class="fa-brands fa-youtube"></i></a>
                </div>
            </div>
        </div>
        <hr>
        <div class="footer-down">
            <div>Copyright &copy; 2024</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
<script>

    const urls = new URLSearchParams(window.location.search);
    const admin_auth = urls.get('admin-auth');
    const product = urls.get('product');

    if (admin_auth == null) {
        document.querySelectorAll(".user").forEach((element) => {

            element.style.display = 'block';
        });
        document.querySelectorAll(".admin").forEach(element => {
            element.style.display = 'none';
        });
        document.querySelector(".search-bar").readOnly = false;
        document.querySelector(".search-btn").disabled = false;

    }
    else {
        document.querySelectorAll(".user").forEach((element) => {

            element.style.display = 'none';
        });
        document.querySelectorAll(".footer-up, .footer-main").forEach(element => {
            element.style.display = 'none';
        });
        document.querySelectorAll(".admin").forEach(element => {
            element.style.display = 'block';
        });
        document.querySelector(".search-bar").readOnly = true;
        document.querySelector(".search-btn").disabled = true;
        if (product == "add") {
            document.querySelector(".admin1").style.backgroundColor = 'red';
            document.querySelector(".admin1").style.color = 'white';
            document.querySelector(".admin2").style.backgroundColor = 'white';
            document.querySelector(".admin2").style.color = 'red';
            @* document.querySelector(".admin2").addEventListener('mouseenter'()=> {
                document.querySelector(".admin2").style.backgroundColor = 'red';
                document.querySelector(".admin2").style.color = 'white';
            });
            document.querySelector(".admin2").addEventListener('mouseleave'()=> {
                document.querySelector(".admin2").style.backgroundColor = 'white';
                document.querySelector(".admin2").style.color = 'red';
            }); *@
        }
        else {
            document.querySelector(".admin1").style.backgroundColor = 'white';
            document.querySelector(".admin1").style.color = 'red';
            document.querySelector(".admin2").style.backgroundColor = 'red';
            document.querySelector(".admin2").style.color = 'white';

            @* document.querySelector(".admin2").addEventListener('mouseenter'()=> {
                document.querySelector(".admin1").style.backgroundColor = 'red';
                document.querySelector(".admin1").style.color = 'white';
            });
            document.querySelector(".admin2").addEventListener('mouseleave'()=> {
                document.querySelector(".admin1").style.backgroundColor = 'white';
                document.querySelector(".admin1").style.color = 'red';
            }); *@
        }


    }
</script>

</html>
